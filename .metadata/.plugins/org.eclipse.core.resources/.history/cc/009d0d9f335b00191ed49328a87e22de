	<%
		String emailOfSeller = ""+session.getAttribute("username");
		String name = request.getParameter("name");
		String condition = request.getParameter("conditionition");
		String type = request.getParameter("type");
		String brand = request.getParameter("brand");
		String size = request.getParameter("size");
		String color = request.getParameter("color");
		String startingPrice = request.getParameter("startingPrice");
		String incre = request.getParameter("increment");
		String closingdate = request.getParameter("closingDate");
		String minp = request.getParameter("minimumPrice");
		Timestamp datePosted = new Timestamp(System.currentTimeMillis());
		int status = 0;
		
		
		if(name.isEmpty()||condition.isEmpty() || type.isEmpty()||startingPrice.isEmpty()||closingdate.isEmpty()||incre.isEmpty()||minp.isEmpty()||Integer.parseInt(minp) < Integer.parseInt(startingPrice)|| datePosted.after(Timestamp.valueOf(closingdate.replace("T", " ")+":00"))){
			out.print("<p>You did not fill in all the fields. Please go back and try again.</p>");
		}else{
	
			try {
				//Get the database connection
				ApplicationDB db = new ApplicationDB();	
				Connection con = db.getConnection();
	
				//Create a SQL statement
				Statement stmt = con.createStatement();
				
				//make an update SQL query
				String insert = "INSERT INTO jewelry (name, condition, color, type, size, brand, datePosted, emailOfSeller,status) values (?, ?, ?, ?, ?, ?, ?, ?, ?)";
				
				//make a statement object that will execute the query
				PreparedStatement ps = con.prepareStatement(insert);
				//add query parameters to the statement object
				
				ps.setString(1, name);
				ps.setString(2, condition);
				ps.setString(4, color);
				ps.setString(6,type);
				ps.setString(7, size);
				ps.setString(8, brand);
				ps.setTimestamp(10, datePosted);
				ps.setString(11,emailOfSeller);
				ps.setInt(12, status);
				//run the query against the database
				ps.executeUpdate();
				
				String str = "select jewelryID from jewelry where emailOfSeller = '"+ emailOfSeller +"' order by datePosted desc limit 1";
				ResultSet result = stmt.executeQuery(str);
				if(result.next()){
					
					int jewelryID = result.getInt("jewelryID");	 
					
					insert="INSERT INTO infoOfBid values (?, ?, ?, ?, ?)";
					PreparedStatement pss = con.prepareStatement(insert);
					pss.setInt(1, jewelryID);
					pss.setInt(2, Integer.parseInt(startingPrice));
					pss.setTimestamp(3, Timestamp.valueOf(closingdate.replace("T", " ")+":00"));
					pss.setInt(4, Integer.parseInt(incre));
					pss.setInt(5, Integer.parseInt(minp));
					pss.executeUpdate();
					
			
				}
				//close the connection
				con.close();
				//notify the user that the update succeeded.
				out.print("<p>Your jewelry will now appear in searches.</p>");
			} catch (Exception ex) {
				out.println(ex);
			}
		}
	%>
